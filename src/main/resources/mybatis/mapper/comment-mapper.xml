<?xml version="1.0" encoding="UTF-8" ?> 

<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd"> 

<mapper namespace="comments">
	<insert id="insert">
	insert into comments values (comments_no_seq.nextval,#{commentsContent},sysdate,null,#{commentsGroupNo},#{memberNo},#{boardNo})
	</insert>
	<insert id="nestedinsert">
	insert into comments values(comments_no_seq.nextval,#{commentsContent},sysdate,#{commentsSuperNo},#{commentsGroupNo},#{memberNo},#{boardNo}) 
	</insert>
	<select id="list" resultType="CommentsVO">
	select * from comments_view 
	connect by prior comments_no = comments_super_no
	start with comments_super_no is null
	order siblings BY comments_group_no desc, comments_no asc
	
	</select>



</mapper>