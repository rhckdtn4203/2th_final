<?xml version="1.0" encoding="UTF-8" ?> 

<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd"> 

<mapper namespace="bookmark">
	<insert id="insert">
	insert into bookmark values(#{memberNo}, #{boardNo})
	</insert>
	<delete id="delete">
	delete from bookmark where board_no = #{boardNo} and member_no=#{memberNo}
	</delete>
	<select id="search" resultType="BookmarkDto">
	select * from bookmark where board_no=#{boardNo} and member_no=#{memberNo}
	</select>
	<select id="mybookmark" resultType="BookmarkDto">
	select * from bookmark_view where member_no = #{memberNo}
	</select>
</mapper>